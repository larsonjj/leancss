{
  "name": "leancss",
  "version": "0.2.1",
  "description": "Extremely minimal and modular css framework",
  "main": "src/lean.scss",
  "unpkg": "website/static/css/lean.min.css",
  "style": "leancss/website/static/css/lean.min.css",
  "scripts": {
    "build": "npx gulp",
    "prod": "npx gulp --production",
    "start": "npx gulp watch",
    "gitcheck": "test -d 'git diff-index --quiet HEAD --' || { echo 'You have modified files in your working directory. Please commit them before building.'; exit 1; }",
    "preversion": "npm run prod && npm run gitcheck",
    "postversion": "git push && git push --tags",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larsonjj/leancss.git"
  },
  "keywords": [
    "css",
    "framework",
    "minimal",
    "amp"
  ],
  "author": {
    "name": "Jake Larson",
    "email": "jake.j.larson@gmail.com",
    "url": "http://jakelarson.io"
  },
  "license": "MIT",
  "ignore": [
    ".editorconfig",
    ".gitignore",
    "package.json",
    "src"
  ],
  "engines": {
    "node": ">=10.17.0"
  },
  "bugs": {
    "url": "https://github.com/larsonjj/leancss/issues"
  },
  "homepage": "https://github.com/larsonjj/leancss#readme",
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/register": "^7.6.2",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "postcss": "^7.0.21",
    "postcss-normalize": "^8.0.1",
    "prettier": "^1.18.2",
    "gulp": "^4.0.2",
    "gulp-sass": "^4.0.2",
    "gulp-util": "^3.0.8",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-rename": "^1.4.0",
    "gulp-autoprefixer": "^7.0.1",
    "del": "^5.1.0"
  },
  "lint-staged": {
    "src/**/*.{js,scss}": [
      "prettier --single-quote --jsx-bracket-same-line --write",
      "git add"
    ]
  },
  "browserslist": "last 4 versions"
}
